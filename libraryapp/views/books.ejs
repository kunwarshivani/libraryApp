<% include partials/header %>


<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1> Welcome to the BookZone! </h1>
			<p>Collection of old books</p>
			<p><a class="btn btn-primary btn-large" href="/books/new">Add new book</a></p>
		</div>
	</header>


	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		
		<% books.forEach(function(book){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src= "<%= book.image %>" >
				<div class="caption">
					<h4><%= book.name %></h4>
				</div>
				
			</div>
		</div>
		<% }); %>

	</div>
</div>

<% include partials/footer %>